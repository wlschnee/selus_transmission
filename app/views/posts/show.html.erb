<%= link_to "< all of the posts", posts_path %>
<h2><%= @post.title %>
<% if current_user %>
  <% if current_user.admin? || current_user == @post.user %>
    <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-default' %>
  <% end %>
<% end %>
</h2>
<h4>Posted by: <%= link_to @post.user.name, user_path(@post.user) %> on <%= @post.created_at.strftime('%Y/%m/%d') %></h3>
<p><%= simple_format(@post.content) %></p>

