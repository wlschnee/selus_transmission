<%= form_for @user, url: sign_up_path do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'First Last', class: 'form-control' %><br>
  </div>
  <div class="form-group">
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: 'user@selus.com', class: 'form-control'  %><br>
  </div>
  <div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, placeholder: 'Abc123@#!', class: 'form-control'  %><br>
  </div>
  <div class="form-group">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: 'Abc123@#!', class: 'form-control'  %><br>
  </div>
  <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
<% end %>